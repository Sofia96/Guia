@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "navbar-link login"})
            </li>
            <li><a class="btn btn-danger action-button" role="button" href="javascript:document.getElementById('logoutForm').submit()">Cerrar Sesion</a></li>
        </ul>
    }
}
else
{

        <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink("Quiero registrarme", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "navbar-link login" })</li>
            <li>@Html.ActionLink("Ingresar", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn btn-default action-button", @role = "button" })</li>
            <li><a class="nav-links"><span class="disabled" style="color:ghostwhite">@Session["Username"].ToString()</span></a></li>
        </ul>

}