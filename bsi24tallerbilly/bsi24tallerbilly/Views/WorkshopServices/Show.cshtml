@model bsi24tallerbilly.Models.WorkshopServicesViewModel.WorkshopServicesListViewModel
@{
    ViewBag.Title = "Servicios";
}

<div class="col-lg-12 text-center" style="padding-bottom:22px">
    <h2 class="section-heading">@ViewBag.Title</h2>
</div>

<div class="container">

    <div class="row">
        <div class="col-md-12">



            @foreach (var WorkshopService in Model.ListOfServices)
            {
                string URL = "http://placehold.it/424x400";
                if (WorkshopService.ImageURL != null)
                {
                    URL = WorkshopService.ImageURL;
                }

                <div class="col-md-4">
                    <div class="thumbnail WorkshopServices">
                        <img src="@URL" alt="Hola" height="400" width="424">
                        <div class="caption text-center">
                            <h3>@WorkshopService.Title</h3>
                            <p>@WorkshopService.Description</p>
                        </div>
                    </div>
                </div>

            }

        </div>
    </div>

</div>